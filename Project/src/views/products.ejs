<%- include('partials/head') %> 
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="/css/products.css">
    <link rel="stylesheet" href="/css/estilo-nav.css">
    <link rel="stylesheet" href="/css/estilo-footer.css">
    <script src="https://kit.fontawesome.com/eb496ab1a0.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <%-include ('partials/navbar') %>
    </header>
    </div>
    <main>

        <section class="catalogo">
            <div class="grid-layout" >
                <% products.forEach((producto) => { %> 
                <article class="producto">
                    <img src="/images/imgProductos/<%= producto.img %>" alt="imagen producto" class="product-img">
                    <div class="product-name"><%= producto.name%></div>
                    <div class="product-prize"><%= producto.price%></div>
                    <div class="product-payments">12 cuotas sin interes</div>
                    <a href='/gaminglife/productos/detalle/<%= producto.id %> ' class="product-viewmore">ver m√°s</a>
                </article>
                <% }) %>

                <article class="producto">
                    <img src="/images/default-image.png" alt="imagen producto" class="product-img">
                    <div class="product-name">Nuevo Producto</div>
                    <a href='/gaminglife/productos/crear' class="product-viewmore">Crear</a>
                </article>

            </div>
        </section>

    </main>
    <%- include('partials/footer') %> 
</body>
