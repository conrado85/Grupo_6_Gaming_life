<%- include('partials/head') %>
    <title>
        <%= producto.name%>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/products.css">
    <link rel="stylesheet" href="/css/estilo-nav.css">
    <link rel="stylesheet" href="/css/estilo-footer.css">
    <link rel="stylesheet" href="/css/relationship.css">
    <script src="https://kit.fontawesome.com/eb496ab1a0.js" crossorigin="anonymous"></script>
    </head>

    <body>
        <header>
            <%-include ('partials/navbar') %>
        </header>
        <main class="main-conteiner">
            <section class="product-box">
                <div class="img-conteiner">
                    <img src="/images/imgProductos/<%= producto.img%>" class="product-img-detail" alt="">
                </div>

                <div class="features">
                    <h1 class="p-name">
                        <%= producto.name%>
                    </h1>
                    <h2 class="p-price">Precio: $<%= producto.price%>
                    </h2>
                    <div class="button-conteiner">

                        <button class="buttonP" type="submit">Agregar al carrito</button>
                        <% if(locals.session && locals.session.id === 1){%>
                            <a href="/gaminglife/productos/editar/<%= producto.id %>"><button class="buttonP"
                                    type="submit">Editar</button></a>
                            <%}%>

                        <button class="buttonComprar" type="submit">Comprar</button>

                    </div>
                </div>
            </section>
            <section class="description-box">
                <h2>Descripción del producto:</h2>
                <p class="p-description"><%- producto.description.replace(/\n/g, '<br>' ) %></p>
            </section>

            <section class="relation-box">
                <h2>Productos relacionados:</h2>
                <div class="display-relation">
                    <% listaProductos.forEach((productoR)=> {
                        if (productoR.category_id == producto.category_id && productoR.name != producto.name) { %>
                        <article class="producto">
                            <img src="/images/imgProductos/<%= productoR.img %>" alt="imagen producto"
                                class="product-img">
                            <div class="product-name">
                                <%= productoR.name%>
                            </div>
                            <div class="product-prize">$<%= productoR.price%>
                            </div>
                            <div class="product-payments">12 cuotas sin interes</div>
                            <a href='/gaminglife/productos/detalle/<%= productoR.id %> ' class="product-viewmore">Ver
                                más</a>
                        </article>
                        <% }}) %>
                </div>

            </section>
        </main>

    </body>
    <%- include('partials/footer') %>

        </html>