<%-include('partials/head') %>
    <link rel="stylesheet" href="/css/profile.css">
    <title>Mi perfil</title>

    <body>
        <header>
            <%-include ('partials/navbar') %>
        </header>
        <main>
            <div class="profile-container">
                <h1 class="title">Â¡Que bueno verte de vuelta, <%= user.name %>!</h1>
                <div class="pfp">
                    <img src="../../public/images/userImg/<%= user.img %>" height="100px">
                    <label class= "pfp-upload" for="pfp-upload">Cambiar foto de perfil</label>
                    <input type="file" accept=".jpg,.png,.jpeg" name="pfp-upload" alt="Modificar foto perfil">
                </div>
                <div class="card_count">
                    <div class="count">
                        <div class="user-details">
                            <h3>
                                <%= locals.user.name%>
                            </h3>
                            <p>Nombre y apellido</p>
                        <div class="user-details">
                            <h3>
                                <%= locals.user.email%>
                            </h3>
                            <p>Casilla de mail</p>
                        </div>
                        <div class="user-details">
                            <h3><%= locals.user.username%></h3>
                            <p>Nombre de usuario</p>
                        </div>
                    </div>
                    <div class="btn">
                    <a href="/gaminglife/usuario/logout" class="subtitle">Cerrar Sesion</a>
                </div>
                </div>
        </main>
    </body>
    <%- include('partials/footer') %>