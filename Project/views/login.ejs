        <main class="loginMain">
            <div class="login">
                <h2> Inicio de sesión</h2>
                <p>Para comenzar ingresá tu email y tu contraseña</p>
                <form method="post">
                    <div class="username">
                        <input type="text">
                        <label for="email"> Email </label>
                    </div>
                        <% if (locals.errors?.email) { %>
                            <div class = "register-error-message"><%= errors.email.msg %></div>
                            <% } %>
                    <div class="username">
                        <input type="password">
                        <label for= "password">Contraseña</label>
                    </div>
                        <% if (locals.errors?.password) { %>
                            <div class = "register-error-message"><%= errors.password.msg %></div>
                            <% } %>
                            <br>
                    <div class="recording">¿Olvido su contraseña?</div>
                    <input class="sumbit" type="submit" value="Inicia Sesión">
                    <div class="register">
                        ¿No tenes cuenta? <a href="/gaminglife/usuario/registro">Crear cuenta</a>
                    </div>
                </form>
            </div>
        </main>
