<%-include('partials/head') %>
    <link rel="stylesheet" href="/css/reglogstyle.css">
    <title>Mi perfil</title>

    <body>
        <header>
            <%-include ('partials/navbar') %>
        </header>
        <main>
            <div class="container-login">
                <h1 class="title">Â¡Que bueno verte de vuelta, <%= locals.user.fullname%>!</h1>
                <a href="/gaminglife/usuario/logout" class="subtitle">Salir</a>
                <div class="pfp">
                    <img src="/images/userImg/<%= locals.user.img%>" alt="Foto de perfil">
                    <label for="pfp-upload">Cambiar foto de perfil</label>
                    <input type="file" accept=".jpg,.png,.jpeg" name="pfp-upload" alt="Modificar foto perfil">
                </div>
                <h3 class="subtitle">Datos personales</h4>
                <div class="user-data">Nombre y apellido</div>
                <div>
                    <%= locals.user.fullname%>
                </div>
                <div class="user-data">Usuario
                    <div>
                        <%= locals.user.username%>
                    </div>
                    <div class="user-data">Fecha de nacimiento
                        <div>
                            <%= locals.user.birthday%>
                        </div>
                    </div>
                    <div class="user-data">Casilla de mail
                        <div>
                            <%= locals.user.email%>
                        </div>
        </main>
    </body>
    <%- include('partials/footer') %>